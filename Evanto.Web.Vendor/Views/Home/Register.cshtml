    <script>
        $.listen('parsley:field:error', function (ParsleyField) {
            ParsleyField.$element.parent().parent().addClass("has-error").removeClass("has-success");
        });
        $.listen('parsley:field:success', function (ParsleyField) {
            ParsleyField.$element.parent().parent().addClass("has-success").removeClass("has-error");;
        });
    </script>
